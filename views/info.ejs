        opacity: 100%;
        animation: showtitle 1s;
      }
      @keyframes showtitle {
        0% { opacity: 0%; }
        100% { opacity: 100%; }
      }
      .page-title p {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        color: white;
        margin: 0;
        font-size: 24px;
        opacity: 100%;
      }
      .main {
        margin-left: 8vw;
        margin-right: 8vw;
      }
